extends layout

block content
  nav
    if user
      h2 Welcome Back! #{user.username}
    else
      button(onclick='window.location="/log-in"') Sign In
      
  header
    h1= title
    p Welcome to #{title}! To post messages, please sign up! To see who's posting the messages, you have to join the secret club!
  main
    button.new-message-button(onclick='window.location="/message"') What's on your mind?
    
    - for(var x = len - 1; x >=0; x--)
      div.messageDiv
        p.msg #{msg[x].text}
        <hr>
        div.messageDiv-info
          p #{msg[x].member.first_name} #{msg[x].member.last_name} 
          if msg[x].added_time.getMinutes() < 10
            p #{msg[x].added_time.toDateString()} #{msg[x].added_time.getHours()}:0#{msg[x].added_time.getMinutes()}
          else 
            p #{msg[x].added_time.toDateString()} #{msg[x].added_time.getHours()}:#{msg[x].added_time.getMinutes()}




